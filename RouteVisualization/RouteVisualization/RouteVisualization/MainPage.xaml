<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RouteVisualization"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             x:Class="RouteVisualization.MainPage">

    <StackLayout Orientation="Horizontal" x:Name="mainStack">
        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Label HorizontalOptions="Start" VerticalOptions="Start" Text="Lugar inicio"/>
                <Entry x:Name="lugarIncialTextBox" HorizontalOptions="Start" VerticalOptions="Start" Text="" WidthRequest="185"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Label HorizontalOptions="Start" VerticalOptions="Start" Text="Lugar final" />
                <Entry x:Name="lugarFinalTextBox" HorizontalOptions="Start" VerticalOptions="Start" Text="" WidthRequest="185"/>
            </StackLayout>

            <Button HorizontalOptions="Center" VerticalOptions="Start" Text="Buscar ruta" Clicked="Button_Click"/>
            <Editor HorizontalOptions="FillAndExpand" VerticalOptions="Start" x:Name="rutaE" Text="" HeightRequest="504" WidthRequest="567"/>
            <Label HorizontalOptions="Center" VerticalOptions="Start" Text="Punto"/>

            <StackLayout Orientation="Horizontal"  HorizontalOptions="Center">

                <Label HorizontalOptions="Start" VerticalOptions="Start" Text="Latitud:"/>
                <Entry HorizontalOptions="Start" VerticalOptions="Start" x:Name="latitudE" Text="" WidthRequest="71"/>
                <Label HorizontalOptions="Start" VerticalOptions="Start" Text="Longitud:"/>
                <Entry HorizontalOptions="Start" VerticalOptions="Start" x:Name="longitudE" Text="" WidthRequest="71"/>
                <Label HorizontalOptions="Start" VerticalOptions="Start" Text="Señales:"/>
                <Editor HorizontalOptions="Start" VerticalOptions="Start" x:Name="signalsE" Text="" HeightRequest="94" WidthRequest="77"/>

            </StackLayout>
            <StackLayout Orientation="Horizontal"  HorizontalOptions="Center">

                <Label HorizontalOptions="Start" VerticalOptions="Start" Text="Distancia recorrido:"/>
                <Entry HorizontalOptions="Start" VerticalOptions="Start" x:Name="distanciaE" Text="" WidthRequest="84"/>
                <Label HorizontalOptions="Start" VerticalOptions="Start" Text="Tiempo de recorrido:"/>
                <Entry HorizontalOptions="Start" VerticalOptions="Start" x:Name="tiempoE" Text="" WidthRequest="84"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal"  HorizontalOptions="Center">

                <Picker HorizontalOptions="Start" VerticalOptions="Start" x:Name="warningsPicker" Title="Advertencias" SelectedIndexChanged="pickerClicked"/>
                <Editor HorizontalOptions="Start" VerticalOptions="Start" x:Name="warningsE" Text="" HeightRequest="97" WidthRequest="405"/>

            </StackLayout>
        </StackLayout>
        <local:CustomMap x:Name="mapViewP" MapType="Street" HorizontalOptions="FillAndExpand" WidthRequest="908" HeightRequest="990"/>
    </StackLayout>
</ContentPage>
